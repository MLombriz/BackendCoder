<%- layout('layouts/main.ejs') %>
    
<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h3>Iniciar Sesion</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/signin">
                    <div class="form-group">
                        <input class="form-control" name="email" type="email" placeholder="Insert email" required>
                    </div>
                        <br>
                        <div class="form-group">
                            <input class="form-control" name="password" type="password" placeholder="Insert password" required>
                        </div>
                    <button type="submit" class="btn btn-success btn-block mt-4">Sign In</button>
                </form>
                <a href="/auth/facebook"><button type="submit" class="btn btn-info btn-block mt-4">Facebook</button></a>
            </div>
        </div>
    </div>
</div>
    