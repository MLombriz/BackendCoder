
html(lang="es")

head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Productos en PUG
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous")
body
    div(class="container")
    div(class="row justify-content-center")
        div(class="col-md-6 mt-5")
            h1(class="text-center") Vista de productos
            table(class="table table-striped table-hover mt-5 text-center")
                thead
                    tr
                        th(scope="col") #
                        th(scope="col") Title
                        th(scope="col") Price
                        th(scope="col") PictureURL
                tbody
                    if productsExist
                        each item of items 
                            tr(style="vertical-align: middle;")
                                th(scope="row") item.id 
                                td item.title 
                                td item.price
                                td
                                    img(src=item.pictureUrl alt=item.title height="100")
                   else
                        tr
                            td(colspan="4" class="text-center") No hay productos
                        tr 


    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
        crossorigin="anonymous")